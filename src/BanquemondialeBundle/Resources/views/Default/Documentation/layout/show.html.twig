{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Documentation</h1>

    <table class="table table-striped table-hover"">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
           
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('adminDocumentation') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('adminDocumentation_edit', { 'id': entity.id }) }}">
        <i class="icon-edit"></i>Editer</a> 
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
