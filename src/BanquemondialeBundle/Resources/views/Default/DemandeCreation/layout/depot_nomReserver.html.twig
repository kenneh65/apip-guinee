                    <div class="form-group col-sm-12">
                        <p class="text-info pull-left">(*) : {% trans %}message_obligatoire{% endtrans %}</p><br/>
                    </div>
                    <div>
                        <input class="btn btn-info" type="submit" value="{{ 'enregistrer'|trans }}"/>
                        <a href="{{ path('administration') }}"
