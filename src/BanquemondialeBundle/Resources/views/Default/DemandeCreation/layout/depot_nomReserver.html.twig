                    {{ form_end(form) }}

                </div>

            </div>
        </div>
    </div>





{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#simpleForm').submit(function (e) {
            e.preventDefault();
            swal({
                    title: "{{ 'message_confirmation'|trans }}    ",
                    text: "{{ 'message_confirmer_depot'|trans }}",
