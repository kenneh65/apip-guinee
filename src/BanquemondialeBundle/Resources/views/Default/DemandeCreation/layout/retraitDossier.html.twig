{% extends '::base.html.twig' %}



{% block body %}
    <style>
        input[type="checkbox"][data-readonly] {
            pointer-events: none;
        }

        /*input[data-readonly] {*/
        /*    pointer-events: none;*/
        /*}*/
    </style>
    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            {% trans %}document_retrait{% endtrans %} nÂ° {{ idd }}
                        </h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <form name="frmDocColled" action="{{ path(postUrl,{'idd':idd}) }}" method="POST">
                <div class=" row">
                    <div class="form-group col-sm-4"><label>{% trans %}beneficiaire{% endtrans %}</label><input
                                type="text" class="form-control " name="beneficiaire" value="" required="required"/>
                    </div>
                    <div class="form-group col-sm-4"><label>{% trans %}telephone{% endtrans %}</label><input
                                maxlength="20" id="phoneNumber" type="tel" class="form-control" name="telephone"
                                placeholder="(+224) 999 99 99 99" value="" required="required"/></div>
                </div>
                <table class="table table-hover table-bordered">
                    <thead>
                    <tr>
                        <th></th>
                        <th>{% trans %}pole{% endtrans %}</th>
                        <th>{% trans %}document{% endtrans %}</th>
                        <th>{% trans %}date_delivrance{% endtrans %}</th>
                        <th>{% trans %}date_retrait{% endtrans %}</th>
                        <th>{% trans %}beneficiaire{% endtrans %}</th>
                        <th>{% trans %}telephone{% endtrans %}</th>
                    </tr>
                    </thead>

                    {% for a in listDocument %}
                        <tr>
                            <td>
                                <input
                                        {% if monServices.getNifbyNumDossier(idd)|length>0 %}
                                            {% if a.libelleFormulaireDelivre.id in [2,3] %}
                                                {% if monServices.getRccmbyNumDossier(idd).statut==true
                                                    and monServices.getNifbyNumDossier(idd).statut==true %}checked="true"
                                                {% endif %}
                                                required data-readonly
                                            {% endif %}
                                        {% endif %}
                                        type="checkbox" class="cocher isdocphysiq" name="checkbox[{{ loop.index }}]"
                                        {% if a.estRetire %}checked="checked"{% endif %} />
                                <a href="{{ path('piecejointe_viewpdf', { 'idd': idd, 'pdfName': a.nomFichier }) }} "
                                   target="_blank"><i class="fa fa-file-pdf-o "></i></a>
                                <input type="hidden" name="idPole[{{ loop.index }}]" value="{{ a.pole.id }}"/>
                                <input type="hidden" name="idLibelleFormulaireDelivre[{{ loop.index }}]"
                                       {% if a.LibelleFormulaireDelivre %}value="{{ a.LibelleFormulaireDelivre.id }}"{% endif %} />
                                <input type="hidden" name="numero[{{ loop.index }}]" value="{{ a.numero }}"/>
                            </td>
                            <td>{{ a.pole.nom }}</td>
                            <td>{% if a.libelleFormulaireDelivre %}{{ a.libelleFormulaireDelivre.libelle }}{% endif %}</td>
                            <td>{% if a.dateCreation %}{{ a.dateCreation|date('d-m-Y H:i:s') }}{% endif %}</td>
                            <td>{% if a.dateRetrait %}{{ a.dateRetrait|date('d-m-Y H:i:s') }}{% endif %}</td>
                            <td>{{ a.beneficiaire }}</td>
                            <td>{{ a.telephone }}</td>
                        </tr>
                    {% endfor %}

                    {% for docNonPret in listDocumentNotCollected %}
                        <tr>
                            <td></td>
                            <td>{{ docNonPret.nomPole }}</td>
                            <td>{% if docNonPret.libelleFormulaireDelivre %}{{ docNonPret.libelleFormulaireDelivre }}{% endif %}</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    {% endfor %}


                </table>
                <div class="btn-group">
                    <br/>
                    {% if monServices.getNifbyNumDossier(idd)|length>0 %}
                    {% if monServices.getRccmbyNumDossier(idd).statut==true
                        and monServices.getNifbyNumDossier(idd).statut==true %}
                        <input style="width:100px;" class="btn btn-success form-control col-sm-3" id="btnSubmit"
                               name="btnSubmit" type="submit" value="Enregistrer"/>
                    {% endif %}
                    {% endif %}
                    {% if statutRetrait == 1 %}
                        <input class="btn btn-default btn-goto"type="button"
                               value="{% trans %}retour{% endtrans %}"
                               data-url="{{ path('lister_retrait') }}" />
                    {% elseif statutRetrait == 2 %}
                        <input class="btn btn-default btn-goto"   type="button"
                               value="{% trans %}retour{% endtrans %}"
                               data-url="{{ path('lister_retrait_partiel') }}" />
                    {% endif %}
                </div>
            </form>
        </div>

    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(".btn-goto").click(function () {
            var url = $(this).attr('data-url');
            window.location.href = url;
        });
        $(document).ready(function () {
            var nbc = $("#nbrePoleCocher").val();
            if (nbc == 0) {

                $(".cocher").attr("checked", true);
            }
        });

    </script>
    <script src="{{ asset('jquery-3.2.1.js') }}" type="application/javascript"></script>
    <script type="application/javascript">

        const isNumericInput = (event) => {
            const key = event.keyCode;
            return ((key >= 48 && key <= 57) || // Allow number line
                (key >= 96 && key <= 105) // Allow number pad
            );
        };

        const isModifierKey = (event) => {
            const key = event.keyCode;
            return (event.shiftKey === true || key === 35 || key === 36) || // Allow Shift, Home, End
                (key === 8 || key === 9 || key === 13 || key === 46) || // Allow Backspace, Tab, Enter, Delete
                (key > 36 && key < 41) || // Allow left, up, right, down
                (
                    // Allow Ctrl/Command + A,C,V,X,Z
                    (event.ctrlKey === true || event.metaKey === true) &&
                    (key === 65 || key === 67 || key === 86 || key === 88 || key === 90)
                )
        };

        const enforceFormat = (event) => {
            // Input must be of a valid number format or a modifier key, and not longer than ten digits
            if (!isNumericInput(event) && !isModifierKey(event)) {
                event.preventDefault();
            }
        };

        const formatToPhone = (event) => {
            if (isModifierKey(event)) {
                return;
            }

            // I am lazy and don't like to type things more than once
            const target = event.target;
            const input = event.target.value.replace(/\D/g, '').substring(0, 12); // First ten digits of input only
            const zip = '224';
            const middle = input.substring(3, 6);
            const middle1 = input.substring(6, 8);
            const middle2 = input.substring(8, 10);
            const middle3 = input.substring(10, 12);


            if (input.length > 10) {
                target.value = `(+${zip}) ${middle}-${middle1}-${middle2}-${middle3}`;
            } else if (input.length > 7) {
                target.value = `(+${zip}) ${middle}-${middle1}-${middle2}`;
            } else if (input.length > 5) {
                target.value = `(+${zip}) ${middle}-${middle1}`;
            } else if (input.length > 0) {
                target.value = `(+${zip}) ${middle}`;
            }
        };

        const inputElement = document.getElementById('phoneNumber');
        inputElement.addEventListener('keydown', enforceFormat);
        inputElement.addEventListener('keyup', formatToPhone);


        var elements = document.getElementsByClassName("isdocphysiq");
        for (var i = 0; i < elements.length; i++) {
            elements[i].oninvalid = function (e) {
                e.target.setCustomValidity("");
                if (!e.target.validity.valid) {
                    e.target.setCustomValidity("Veillez certifier la reception physique de ce document");
                }
            };
            elements[i].oninput = function (e) {
                e.target.setCustomValidity("");
            };
        }
    </script>
{% endblock %}