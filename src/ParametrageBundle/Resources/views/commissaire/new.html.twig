{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{asset('/datepicker/css/bootstrap-datetimepicker.min.css')}}" />
{% endblock %}
{% block title %}{%trans%}ajouter_commissaire{%endtrans%}{% endblock %}

{%block active%}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':3})) }}

{%endblock%}
{% block body%}

    <div class="col-lg-12">
        {% for message in app.session.flashbag.get('error') %}            
            <div class="col-lg-12 text-center m-t-md alert alert-success fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>{{ message }}</strong>
            </div>
        {% endfor %} 
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            {%trans%}ajouter_commissaire{%endtrans%}
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{path('administration')}}">{%trans%}dashboard{%endtrans%}</a>
                            </li>
                            <li>
                                <a href="{{path('commissaire_index')}}"><i class="fa fa-fw fa-newspaper-o"></i>&nbsp;&nbsp;{{'commissaire_au_compte'|trans}}</a>
                            </li>
                            <li><i></i>{%trans%}ajout{%endtrans%}</li>
                        </ol>
                    </div>
                </div>
            </div>

            <div class="panel-body">
                
                <div >
                         {{ form_start(form,{'attr':{'name':'simpleForm','id':'simpleForm'}}) }}
                        <div class="form-group col-sm-12">
                            {{ form_label(form.nom,'Nom.Denomination'|trans ~ ' (*)') }} 
                            {{ form_errors(form.nom,{'attr':{'class':'alert alert-danger'}}) }}                                            
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col-sm-12">
                            {{ form_label(form.prenom,'prenom'|trans) }} 
                            {{ form_errors(form.prenom,{'attr':{'class':'alert alert-danger'}}) }}                                            
                            {{ form_widget(form.prenom) }}
                        </div>                        
                        <div class="form-group col-sm-12">
                            {{ form_label(form.dateNaissance,'message_date_naissance'|trans) }} 
                            {{ form_errors(form.dateNaissance,{'attr':{'class':'alert alert-danger'}}) }}  
                            <div class='input-group date' id='datetimepicker'>
                                {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group col-sm-12">
                            {{ form_label(form.lieuNaissance,'message_lieu_naissance'|trans) }} 
                            {{ form_errors(form.lieuNaissance,{'attr':{'class':'alert alert-danger'}}) }}                                            
                            {{ form_widget(form.lieuNaissance) }}
                        </div>
                        <div class="form-group col-sm-12">
                            {{ form_label(form.adresse,'adresse'|trans ~ ' (*)') }} 
                            {{ form_errors(form.adresse,{'attr':{'class':'alert alert-danger'}}) }}                                            
                            {{ form_widget(form.adresse) }}
                        </div>
						<div class="form-group col-sm-12">
                            {{ form_label(form.telfax,'telephone'|trans) }} 
                            {{ form_errors(form.telfax,{'attr':{'class':'alert alert-danger'}}) }}                                            
                            {{ form_widget(form.telfax) }}
                        </div>
						<div class="form-group col-sm-12">
                            {{ form_label(form.bp,'bp'|trans) }} 
                            {{ form_errors(form.bp,{'attr':{'class':'alert alert-danger'}}) }}                                            
                            {{ form_widget(form.bp) }}
                        </div>
						<div class="form-group col-sm-12">
                            {{ form_label(form.email,'email'|trans) }} 
                            {{ form_errors(form.email,{'attr':{'class':'alert alert-danger'}}) }}                                            
                            {{ form_widget(form.email) }}
                        </div>
                       <div class="form-group col-sm-12">
                            {{ form_label(form.numeroAffiliation,'numero_affiliation'|trans~' (*)') }} 
                            {{ form_errors(form.numeroAffiliation,{'attr':{'class':'alert alert-danger'}}) }}                                            
                            {{ form_widget(form.numeroAffiliation, {'attr': {'class': 'form-control'}}) }}
                        </div>
						<div class="form-group col-sm-12">
                            {{ form_label(form.types,'type'|trans) }} 
                            {{ form_errors(form.types,{'attr':{'class':'alert alert-danger'}}) }}                                            
                            {{ form_widget(form.types) }}
                        </div>
                    </div>
                   
                    <div class="form-group col-sm-12">
                        <p class="text-info pull-left">(*) : {{'obligatoire'|trans}}</p><br/>
                        <br />
                        <br />
                        <br />
                        <input style = "width:100px;" class = "btn btn-success form-control col-sm-3 submit" type = "submit" value = "{{'enregistrer'|trans}}"/>
                        <a href = "{{ path('commissaire_index') }}" style = "width:100px;" class = "btn btn-default form-control col-md-offset-7 col-sm-1">{{'annuler'|trans}}</a>                 


                    </div>
					
					{% do form.actif.setRendered %}
                    {{ form_end(form) }}
                </div>
            </div>

        </div>



    {% endblock %}

    {%block javascripts%}
        {{parent()}}
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker').datetimepicker({locale: 'fr', format: 'DD-MM-YYYY'});
            }
            );
            
        </script>

    {%endblock%}
