{% extends "::base.html.twig" %}
{% block title %}{%trans%}ajouter_regle{%endtrans%}{% endblock %}
{%block active%}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':3})) }}

{%endblock%}
{% block body%}

    <div class="col-lg-12">
        {% for message in app.session.flashbag.get('info') %}            
            <div class="col-lg-12 text-center m-t-md alert alert-success fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>{{ message }}</strong>
            </div>
        {% endfor %} 
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            {%trans%}ajouter_regle{%endtrans%}
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                               <i class="fa fa-dashboard"></i>  <a href="{{path('administration')}}">{%trans%}dashboard{%endtrans%}</a>
                                  </li>
                            <li>
                                <a href="{{ path('regles_index') }}">{%trans%}regles{%endtrans%}</a>
                            </li>
                            <li><i></i>{{'ajout'|trans}}</li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                {{ form_start(form,{'attr':{'name':'simpleForm','id':'simpleForm'}}) }}
                <div class="form-group col-sm-12 col-sm-4">
                    {{ form_label(form.formeJuridique,'forme_juridique' |trans ~ ' (*)') }} 
                    {{ form_errors(form.formeJuridique,{'attr':{'class':'alert alert-danger'}}) }}                                            
                    {{ form_widget(form.formeJuridique, {'attr': {'class': 'form-control'}}) }}
                </div>

				
                <div class="form-group col-sm-2 pull-left">
		
                    {{ form_label(form.commissaireRequis,'commissaire' |trans ~ ' (*)') }} 
                    {{ form_errors(form.commissaireRequis,{'attr':{'class':'alert alert-danger '}}) }}                                            
                    {{ form_widget(form.commissaireRequis, {'attr': {'class': 'form-control '}}) }}
                </div>

                <div class="form-group col-sm-12">
                     <p class="text-info pull-left">(*) :{{'obligatoire' |trans}}</p><br/>
                    <br />
                    <br />
                    <br />
                    <input style = "width:100px;" class = "btn btn-success form-control col-sm-3" type = "submit" value = "{{'enregistrer'|trans}}"/>
                    <a href = "{{ path('regles_index') }}" style = "width:100px;" class = "btn btn-default form-control col-md-offset-7 col-sm-1">{{'annuler' | trans}}</a>                 


                </div>
                {{ form_end(form) }}
            </div>
             <hr/>
          
        </div>
    </div>


{% endblock %}
