{%extends '::base.html.twig'%}
{% block title %}{%trans%}dashboard{%endtrans%}{% endblock %}
{%block active %}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':1})) }}
{%endblock %}
{%block body %}
    <div class="row">
        {% for message in app.session.flashbag.get('error') %}
            <div class="col-lg-12 text-center m-t-md alert alert-danger fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>{{ message }}</strong>
            </div>
        {% endfor %}
        <div class="col-lg-12">
            <h1 class="page-header">
               {{ 'INTERFACE DE SUIVI' }}
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-dashboard"></i> {%trans%}dashboard{%endtrans%}
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-folder-open fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge"></div>
                            <div></div>
                        </div>
                    </div>
                </div>
                <a href="{{ path('suivi-dga-liste-dossier-encour') }}">
                    <div class="panel-footer">
                                    <span class="pull-left">
                                      Dossiers en attentes de saisie <strong>({{ NombreTotalEnattenteSaisiiInterfaceDGA }})</strong>
                                    </span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-folder-o fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge"></div>
                            <div></div>
                        </div>
                    </div>
                </div>
                <a href="{{path('dossier-en-attentes-immatriculation-dga-interface',{ids:1})}}">
                    <div class="panel-footer">
                        <span class="pull-left">
                           Dossiers en attentes d'immatriculation
                            ({{NombreTotalEnattenteImmatriculationInterfaceDGA}})
                        </span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-folder-open-o fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge"></div>
                            <div></div>
                        </div>
                    </div>
                </div>
                <a href="{{path('dossier-en-attentes-modification-dga-interface',{ids:3})}}">
                    <div class="panel-footer">
                        <span class="pull-left">
                            Dossiers en attentes de modification
                            ({{NombreTotalEnattenteModificationInterfaceDGA}})
                        </span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{%endblock %}