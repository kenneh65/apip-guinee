{% extends '::base-office.html.twig' %}
{%block title%}
    {%trans%}faq{%endtrans%} - {{parent()}}
{% endblock %}
{%block menu %}
    {{ render(controller("DefaultBundle:Default:menu",{'active':6})) }}
{%endblock%}
{% block body %}
 <div class="clearfix width-100" tyle="height:100%">
        <div class="fusion-row" style="max-width:100%;">
            <div id="content" class="full-width">
                <div class="fusion-row" style="border-color:#e2e2e2;border-bottom-width: 1px;border-top-width: 1px;border-bottom-style: solid;border-top-style: solid;padding-bottom:0px;padding-top:40px;padding-left:30px;padding-right:30px;padding-left:30px !important;padding-right:30px !important;background-color:#ffffff;margin-bo"> 
                    <h2 class="titre"> {%trans%}faq{%endtrans%}</h2>

                    {%if faqs|length !=0%}
                        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="false">
                            {%for faq in faqs%}
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="{{faq.id}}}">
                                        <h4 class="panel-title">
                                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{faq.id}}" aria-expanded="true" aria-controls="collapseOne">
                                                {{faq.question}}
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="{{faq.id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="{{faq.id}}">
                                        <div class="panel-body">
                                            {{faq.reponse}}
                                        </div>
                                    </div>
                                </div>
                            {%endfor%}
                        </div>
                    {%else%}
                        <div class="alert alert-info">{%trans%}aucune_question{%endtrans%}</div>
                    {%endif%}
                </div></div></div></div>
{%endblock%}