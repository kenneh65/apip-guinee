{% extends "::base-office.html.twig" %}

{% block title %}
    {% trans %}
      Confirmation paiement
    {% endtrans %}
    {{ parent() }}
{% endblock %}

{% block body %}
{#    <br>#}
{#    <div class="hpanel">#}
{#        <div class="panel-heading">#}
{#            <div class="row">#}
{#                <div class="col-lg-12">#}
{#                    <h2 class="page-header center">#}
{#                        Confirmation de paiement par orange money#}
{#                    </h2>#}
{#                </div>#}
{#            </div>#}
{#        </div>#}
{#    </div>#}
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                {% for flashMessage in app.session.flashbag.get('successSMS') %}
                    <div style="color: white;background:green"
                         class="alert alert-message-warning text-center " role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                        <strong>{{flashMessage|raw }} </strong>
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('echecSMS') %}
                    <div style="color: white;background:#ff5a2f"
                         class="alert alert-message-warning text-center " role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                        <strong>{{flashMessage|raw }} </strong>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

                <div class="row">

                    <div class="col-sm-12">
                        <div class="thumbnail">
                            <div class="caption text-center" >
                                <h3 class="center">  Confirmation de paiement par orange money</h3>
                                <div class="position-relative">
                                    <img src="http://maliactu.net/wp-content/uploads/2014/06/orange-money-1.png" style="width:72px;height:72px;" />
                                </div>
                                <div class="thumbnail-description smaller">
                                    <h4>
                                        Vous êtes sur le point d'effectuer le paiement par orange money,  il vous faut générer un code de paiement  pour  la validation
                                    </h4>
                                </div>
                                <h4 id="thumbnail-label">
                                    Votre compte sera débuté de :
                                    <a style="list-style: none;text-decoration: none" >
                                        {{(app.session.get('sessionPeriodeReservation').amount) |number_format('0', '.',' ')}} GNF
                                    </a>
                                </h4>

                                <div class="thumbnail-description smaller">
                                    <h4>Pour générer un code OTP (Code paiement) Composer:</h4>
                                    <h2>*144*4*2*1# </h2> <h4>Puis Entrer votre code secret pour confirmer</h4>

                                </div>

                            </div>
                            <div class="caption card-footer text-center">
                                <ul class="list-inline">
                                    <li>
                                        <i class="people lighter"></i>&nbsp; <a
                                                {% if operation=='reservation' %}  href="{{ path('make-orange-money-payement-for-reservation')}}"
                                                {% else %}
                                                    href="{{ path('make-orange-money-payement-for-renouvelement-reservation')}}"
                                                {% endif %}>
                                            <button class="btn btn-success" type="reset">  Lancer le Paiement</button>
                                        </a>
                                    </li>
                                    <li></li>
                                    <li>
                                        <a href="{{ path('default_reservation_reservation') }}">
                                            <button class="btn btn-warning" type="reset">Annuler le Paiement</button>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
{% endblock %}

