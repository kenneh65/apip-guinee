{% extends 'base.html.twig' %}
{% block title %}{%trans%}details_utilisateur_titre{%endtrans%} - {{parent()}}{% endblock %}
{%block active%}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':5})) }}
{%endblock%}

{% block body %}

    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                     <div class="col-lg-12">
                        <h1 class="page-header">
                            {%trans%}message_details_utilisateur{%endtrans%}
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{path('administration')}}">{%trans%}dashboard{%endtrans%}</a>
                            </li>
                            <li>
                                <a href="{{path('utilisateurs_index')}}">{%trans%}utilisateurs{%endtrans%}</a>
                            </li>
                            <li>{{'message_details'|trans}}</li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="panel-body">

                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label>{%trans%}message_genre{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.genre }}
                        </div>
                        <div class="form-group col-sm-4">
                            <label>{%trans%}message_nom{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.nom }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}message_prenom{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.prenom }}
                        </div>
                    </div>
					
					<div class="row">
                        <div class="form-group col-sm-4">
                            <label>{%trans%}message_date_naissance{%endtrans%}</label>
                            <br/>
                             {% if utilisateur.dateNaissance %}{{ utilisateur.dateNaissance|date('Y-m-d') }}{% endif %} 
                        </div>
                        <div class="form-group col-sm-4">
                            <label>{%trans%}message_lieu_naissance{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.lieuNaissance }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}message_email{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.email }}
                        </div>
                    </div>
					
					<div class="row">
                        <div class="form-group col-sm-4">
                            <label>{%trans%}message_pays_residence{%endtrans%}</label>
                            <br/>
                            {{ definedPaysTraduction }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}message_region_residence{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.regionResidence }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}message_departement{%endtrans%}</label>
                            <br/>
                              {{ utilisateur.departement }}
                        </div>
                    </div>
					
					<div class="row">
                        <div class="form-group col-sm-4">
                            <label>{%trans%}message_cni{%endtrans%}</label>
                            <br/>
                              {{ utilisateur.cni }}
                        </div>
                        <div class="form-group col-sm-4">
                            <label>{%trans%}message_telephone{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.telephone }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}message_etat{%endtrans%}</label>
                            <br/>
                             {%if utilisateur.enabled%}
                                        {{'Actif'|trans}}
                                    {%else%}
                                        {{'Inactif'|trans}}
                                     {%endif%}
                        </div>
                    </div>
					
					<div class="row">
                        <div class="form-group col-sm-4">
                            <label>{%trans%}message_nom_utilisateur{%endtrans%}</label>
                            <br/>
                              {{ utilisateur.username }}
                        </div> 
						
						  {%if utilisateur.pole%}
						<div class="form-group col-sm-4">
                            <label>Pole</label>
                            <br/>
                           {{ utilisateur.pole }}
                        </div>
						{% endif %}
						
						 <div class="form-group col-sm-4">
                            <label>{%trans%}message_adresse{%endtrans%}</label>
                            <br/>
                               {{ utilisateur.adresse }}
                        </div> 
                        </div>
                    </div>
					
							
            </div>
			            <a href="{{ path('utilisateurs_index') }}" style = "width:100px;" class = "btn btn-default form-control col-sm-1">{%trans%}message_retour{%endtrans%}</a>
        </div>
    </div>
</div>


{% endblock %}   
