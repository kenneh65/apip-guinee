        <div  class="col-md-6">
            <label>{%trans%}Montant(*){%endtrans %} </label>
            {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.amount, {'attr': {'class': 'form-control'}}) }}

