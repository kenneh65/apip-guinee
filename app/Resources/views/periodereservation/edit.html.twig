        <div class="col-md-6">
            <label>{%trans%}forme juridique(*){%endtrans %} </label>
            {{ form_widget(form.formeJuridiqueTraduction, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.formeJuridiqueTraduction, {'attr': {'class': 'form-control'}}) }}

            <label>{%trans%}Libelle(*){%endtrans %} </label>
            {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
