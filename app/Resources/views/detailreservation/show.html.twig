{% extends 'base.html.twig' %}

{% block body %}
    <h1>Detailreservation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ detailreservation.id }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{{ detailreservation.dateDebut }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{{ detailreservation.dateFin }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if detailreservation.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Operation</th>
                <td>{% if detailreservation.operation %}{{ detailreservation.operation|join(', ') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('detailreservation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('detailreservation_edit', { 'id': detailreservation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
