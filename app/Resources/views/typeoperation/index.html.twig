{% extends "::base.html.twig" %}
{% block title %}{%trans%}gestion_des_categories{%endtrans%}{% endblock %}
{%block active %}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':2})) }}
{%endblock %}
{%block body %}

    <div class="col-lg-12">
        {% for message in app.session.flashbag.get('info') %}
            <div class="col-lg-12 text-center m-t-md alert alert-success fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>{{ message }}</strong>
            </div>
        {% endfor %}
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Type d'opération
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i> <a href="{{path('administration')}}">{%trans%}dashboard{%endtrans%}</a>
                            </li>
                            <li>
                                <a href="#">{%trans%}Type d'opération{%endtrans%}</a>
                            </li>{#{ path('pays_index') }#}
                        </ol>
                    </div>
                </div>
            </div>
            <div style="margin-left:15px">
{#                <a href="{{path('categorie_new')}}" class="btn btn-default" ><i class="fa fa-plus">&nbsp;&nbsp;{%trans%}nouvelle_categorie{%endtrans%}</i></a>#}
                <hr/>
            </div>
            <div class="table-responsive panel-body" style="width:100%">
                {%if typeOperations | length!=0%}

                    <table id="categories" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>{%trans%}message_libelle{%endtrans%}</th>
                            <th>{%trans%}message_statut{%endtrans%}</th>
                            <th>{%trans%}message_action{%endtrans%}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in typeOperations %}
                            <tr>
                                <td>{{ item.name }}</td>
                                <td>
                                    <span class="label label-success">{{ item.encour ? 'opération en cours' : '' }}</span>
                                </td>
                                <td>
                                  {% if item.encour==false  %}
                                      <button class="btn btn-xs btn-success btn-group">Activer</button>
                                  {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {%else%}
                    <div class="alert alert-info">{%trans%}message_aucun_element_trouve{%endtrans%}</div>
                {%endif%}



            </div></div></div>
{%endblock %}
    {%block javascripts %}
        {{parent()}}
    {%endblock%}