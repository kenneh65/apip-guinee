{%extends '::base.html.twig'%}

{% block title %}{%trans%}dashboard{%endtrans%}{% endblock %}
{%block active %}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':1})) }}

{%endblock %}
{%block body %}
    

<div class="panel-body">
     
    <div class="panel-body">
	 <h1 class="page-header">{%trans%}message_nouvelle_quittance_titre{%endtrans%}</h1>
        {% for message in app.session.flashbag.get('info') %}            
            <div class="col-lg-12 text-center m-t-md alert alert-success fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>{{ message }}</strong>
            </div>
        {% endfor %} 
   

    <form id="form" data-toggle="validator"  method="POST" {{ form_enctype(form)}}>     

    <div class="row">
        <div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}numero_dossier{%endtrans%}</label>
               {{ form_errors(form.numeroDossier,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.numeroDossier, {'attr': {'class': 'form-control','required':'required'}}) }}
        </div> 
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}message_serie{%endtrans%} </label>
               {{ form_errors(form.serie,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.serie, {'attr': {'class': 'form-control'}}) }}
        </div>
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}numero_volume{%endtrans%} </label>
               {{ form_errors(form.numeroVolume,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.numeroVolume, {'attr': {'class': 'form-control'}}) }}
        </div>
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}message_RefTitreRecette{%endtrans%}</label>
               {{ form_errors(form.refTitreRecette,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.refTitreRecette, {'attr': {'class': 'form-control','required':'required'}}) }}
        </div>
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}message_RecuDe{%endtrans%}</label>
               {{ form_errors(form.denominationSociale,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.denominationSociale, {'attr': {'class': 'form-control','disabled':true}}) }}
        </div>
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}message_natureRecette{%endtrans%} </label>
               {{ form_errors(form.natureRecette,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.natureRecette, {'attr': {'class': 'form-control'}}) }}
        </div>
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}type_dossier{%endtrans%} </label>
               {{ form_errors(form.typeDossier,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.typeDossier, {'attr': {'class': 'form-control'}}) }}
        </div>	
		<!--div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}montant_verse{%endtrans%} </label>
               {{ form_errors(form.montantVerse,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.montantVerse, {'attr': {'class': 'form-control','disabled':true}}) }}
        </div-->
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}mode_paiement{%endtrans%} </label>
               {{ form_errors(form.modePaiement,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.modePaiement, {'attr': {'class': 'form-control','disabled':true}}) }}
        </div>
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}denomination{%endtrans%} </label>
               {{ form_errors(form.denominationSociale,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.denominationSociale, {'attr': {'class': 'form-control','disabled':true}}) }}
        </div>	
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}forme_juridique{%endtrans%} </label>
               {{ form_errors(form.formeJuridique,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.formeJuridique, {'attr': {'class': 'form-control','disabled':true}}) }}
        </div>		
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}montant_total_facture{%endtrans%} </label>
               {{ form_errors(form.montantTotalFacture,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.montantTotalFacture, {'attr': {'class': 'form-control','disabled':true}}) }}
        </div>	
		
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}numero_quittance{%endtrans%} </label>
               {{ form_errors(form.numeroQuittance,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.numeroQuittance, {'attr': {'class': 'form-control','disabled':true}}) }}
        </div>
		<div class="form-group col-sm-4">                               
			<label for="quittance_nom">{%trans%}date_paiement{%endtrans%} </label>
               {{ form_errors(form.datePaiement,{'attr':{'class':'alert alert-danger'}}) }}								
               {{ form_widget(form.datePaiement, {'attr': {'class': 'form-control','disabled':true}}) }}
        </div>
                            
	</div>
        <div class="form-group col-sm-12">            
            <br />
            <br />
            <br />
            <input style = "width:100px;" class = "btn btn-success form-control col-sm-3" type = "submit" value = "{% trans %}message_charger{% endtrans%}"/>
            <a href = "{{path('gestion_caisse')}}" style = "width:100px;" class = "btn btn-default form-control col-md-offset-8 col-sm-1">{%trans%}retour{%endtrans%}</a>

			
            </div>
		{{ form_end(form) }}
     </form>   
	</div>
</div>
	
{%endblock %}
