{% extends '::base.html.twig' %}

{% block title %}{%trans%}message_creation_entreprise{%endtrans%} {% endblock %}

{% block body %}
    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            {%trans%}activite_anterieure{%endtrans%} {% if dd.id %} <label class="pull-right h4" style="color: #d44">{%trans%}message_dossier_numero{%endtrans%} {{dd.id}}</label>{%endif%}
                        </h1>
                        {% block sousMenu %}
                            {{ render(controller("BanquemondialeBundle:Shared:etapeBrouillon",{'idd':dd.id})) }}
                        {% endblock %}
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="panel-body">
                    {{ form_start(form,{'attr':{'name':'simpleForm','id':'simpleForm'}}) }}

                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label>{%trans%}date_debut{%endtrans%}</label>
                            {{ form_errors(form.dateDebut,{'attr':{'class':'alert alert-danger'}}) }} 
                            <div class="input-group date" id="datetimepicker1">
                                {{ form_widget(form.dateDebut, {'attr': {'class': 'datepicker form-control'}}) }}
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group col-sm-4">
                            <label>{%trans%}date_fin{%endtrans%}</label> 
                            {{ form_errors(form.dateFin,{'attr':{'class':'alert alert-danger'}}) }}  
                            <div class="input-group date" id="datetimepicker2">
                                {{ form_widget(form.dateFin, {'attr': {'class': 'datepicker form-control'}}) }} 
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group col-sm-4">
                            <label>{%trans%}precedentRccm{%endtrans%} : </label> 
                            {{ form_errors(form.precedentRccm,{'attr':{'class':'alert alert-danger'}}) }}                           								 
                            {{ form_widget(form.precedentRccm, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row">                                                   
                        <div class="form-group col-sm-12">
                            <label>{%trans%}natureActivite{%endtrans%} : </label> 
                            {{ form_errors(form.natureActivite,{'attr':{'class':'alert alert-danger'}}) }}                           								 
                            {{ form_widget(form.natureActivite, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row">                                                   
                        <div class="form-group col-sm-12">
                            <label>{%trans%}etablissement_principal{%endtrans%} : </label> 
                            {{ form_errors(form.etablissementPrincipal,{'attr':{'class':'alert alert-danger'}}) }}                           								 
                            {{ form_widget(form.etablissementPrincipal, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row">                                                   
                        <div class="form-group col-sm-8">
                            <label>{%trans%}etablissement_Secondaire{%endtrans%} : </label> 
                            {{ form_errors(form.etablissementSecondaire,{'attr':{'class':'alert alert-danger'}}) }}                           								 
                            {{ form_widget(form.etablissementSecondaire, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group col-sm-4">
                            <label>{%trans%}rccmEtabSecondaire{%endtrans%} : </label> 
                            {{ form_errors(form.rccmEtabSecondaire,{'attr':{'class':'alert alert-danger'}}) }}                           								 
                            {{ form_widget(form.rccmEtabSecondaire, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row">                                                   
                        <div class="form-group col-sm-12">
                            <label>{%trans%}adresse_geo_postale{%endtrans%} : </label> 
                            {{ form_errors(form.adresse,{'attr':{'class':'alert alert-danger'}}) }}                           								 
                            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group col-sm-4 hidden">                                            
                        {{ form_widget(form.dossierDemande, {value:dd.id}, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="row">
                        <input  style = "width:100px;"class = "btn btn-success col-md-2" type = "submit" value = "{{'enregistrer'|trans}}"/>
                        <a href = "{{path('dossierEncours')}}" style = "width:100px;" class = "btn btn-default col-md-offset-7 col-md-2">{%trans%}annuler{%endtrans%}</a>
                    </div>                    
                    {{ form_end(form) }}
                </div>                     
            </div>        
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>
        $(function () {
            $('#datetimepicker1').datetimepicker({locale: 'fr', format: 'MM-YYYY'});
            $('#datetimepicker2').datetimepicker({locale: 'fr', format: 'MM-YYYY'});
        });
    </script>
{% endblock %}