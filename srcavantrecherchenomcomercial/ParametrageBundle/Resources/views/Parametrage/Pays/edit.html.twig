{% extends "::base.html.twig" %}
{% block title %}{%trans%}editer_pays{%endtrans%}{% endblock %}

{%block active%}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':2})) }}

{%endblock%}

{% block body%}
   <div class="col-lg-12">
            {% for message in app.session.flashbag.get('info') %}            
                <div class="col-lg-12 text-center m-t-md alert alert-success fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>{{ message }}</strong>
                </div>
            {% endfor %} 
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="page-header">
                                    {%trans%}editer_pays{%endtrans%}
                                </h1>
                                <ol class="breadcrumb">
                                    <li>
                                         <i class="fa fa-dashboard"></i>  <a href="{{path('administration')}}">{%trans%}dashboard{%endtrans%}</a>
                                    </li>
									<li>
                                        <a href="{{ path('pays_index') }}">&nbsp;&nbsp;{%trans%}pays{%endtrans%}</a>
                                    </li>
								    <li>
                                       &nbsp;&nbsp;{%trans%}editer_pays{%endtrans%}
                                    </li>	
                                </ol>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                     {{ form_start(edit_form,{'attr':{'name':'simpleForm','id':'simpleForm','novalidate':'novalidate'}}) }}
                            <div class="form-group col-sm-12">
                                {{ form_label(edit_form.code,'code'|trans ~ ' (*)') }} 
                                {{ form_errors(edit_form.code,{'attr':{'class':'alert alert-danger'}}) }}                                            
                                {{ form_widget(edit_form.code, {'attr': {'class': 'form-control'}}) }}
                            </div>
							
                             <div class="form-group col-sm-12">
                               <label style="margin-top:20px">{%trans%}est_pays_par_defaut{%endtrans%}</label>&nbsp;
                               {% if pays.residence==true%}
                               <input type="checkbox" name="residence_pays" value="1" selected/>
                               {%else%}
                                     <input type="checkbox" name="residence_pays" value="1"/>
                                   {%endif%}
                            </div>
                             
                            <div class="form-group col-sm-12">
                            <p class="text-info pull-left">(*) : {%trans%}obligatoire{%endtrans%}</p><br/>
                            <br />
                                <br />
                                <br />
                                <input style = "width:100px;" class = "btn btn-success form-control col-sm-3" type = "submit" value = "{%trans%}enregistrer{%endtrans%}"/>
                                <a href = "{{ path('pages_index') }}" style = "width:100px;" class = "btn btn-default form-control col-md-offset-7 col-sm-1">{%trans%}annuler{%endtrans%}</a>                                                                                 
                            </div>
                             {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>

                       
{% endblock %}
