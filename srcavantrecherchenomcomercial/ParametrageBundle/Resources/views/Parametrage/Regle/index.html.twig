{% extends "::base.html.twig" %}
{% block title %}{%trans%}regles{%endtrans%}{% endblock %}

{%block active%}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':2})) }}

{%endblock%}
{% block body%}

    <div class="col-lg-12">
        {% for message in app.session.flashbag.get('info') %}            
            <div class="col-lg-12 text-center m-t-md alert alert-success fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>{{ message }}</strong>
            </div>
        {% endfor %} 
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            {%trans%}liste_regles{%endtrans%}
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{path('administration')}}">{%trans%}dashboard{%endtrans%}</a>
                            </li>
                            <li>
                                {%trans%}regles{%endtrans%}
                            </li>
                        </ol>
                    </div>
                </div>
            </div>	
			<div class="panel-body">
			<div style="margin-left:15px"> <a href="{{path('regle_new')}}" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;&nbsp;{%trans%}ajouter_regle{%endtrans%}</a></div>
			<br/>
					<table id="regles" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>{%trans%}forme_juridique{%endtrans%}</th>
                                <th>{%trans%}commissaire{%endtrans%}</th>
								<th>{%trans%}action{%endtrans%}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in regles %}
                                <tr>
                                    <td>{{ item.libelle }}</td>
									<td>
										{% if item.commissairerequis %}{%trans%}oui{%endtrans%}
										{% else %}{%trans%}non{%endtrans%} {% endif %}
									</td>
                                    <td>
                                        <a style = "margin-right:15px;" href = "{{path('editer_regle',{'id':item.id})}}" title = "{{'modifier'|trans}}">
										<i class="fa fa-pencil"></i></a>
										<a href="#" title="{{'supprimer'|trans}}" class="supprimer" data-id="{{item.id}}"><i class="fa fa-remove"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
				</div>
        {% endblock %}
        {%block javascripts%}
            {{parent()}}
    <script type="text/javascript">

        $(function () {
		
		 $('.supprimer').click(function(){
				var entityId = '';
				entityId = $(this).attr('data-id');
				var url = '{{path("regle_delete",{"id":"entityId"})}}'; 
				
						
				swal({
					title: "{{'message_confirmation'|trans}}",
					text: "{{'message_confirmer_suppression'|trans}}",
               
					showCancelButton: true,
					confirmButtonColor: "#3f5872",                
					cancelButtonText: "{{'annuler'|trans}}",
					confirmButtonText: "{{'confirm_suppression'|trans}}",		
					},
					function () {
					url = url.replace("entityId", entityId );
					window.location.replace(url);
					});
			});
			
			
			
            $('#regles').DataTable({"lengthMenu": [[5, 10, 25, 50, 100, -1], [5, 10, 25, 50, 100, "All"]],"language": {
                    "sProcessing": "{{'traitement_en_cours'|trans}}",
                    "sSearch": "{{'rechercher'|trans}} :",
                    "sLengthMenu": "{{'Afficher _MENU_ éléments'|trans}}",
                    "sInfo": "{{'Affichage des éléments de _START_ à _END_ sur _TOTAL_ éléments'|trans}}",
                    "sInfoEmpty": "{{'Affichage des éléments 0 à 0 sur 0 élément'|trans}}",
                    "sInfoFiltered": "({{'filtré de _MAX_ éléments au total'|trans}})",
                    "sInfoPostFix": "",
                    "sLoadingRecords": "Chargement en cours...",
                    "sZeroRecords": "{{'Aucun élément à afficher'|trans}}",
                    "sEmptyTable": "{{'Aucune donnée disponible dans le tableau'|trans}}",
                    "oPaginate": {
                        "sFirst": "{{'premier'|trans}}",
                        "sPrevious": "{{'precedent'|trans}}",
                        "sNext": "{{'suivant'|trans}}",
                        "sLast": "{{'dernier'|trans}}"
                    },
                    "oAria": {
                        "sSortAscending": ": activer pour trier la colonne par ordre croissant",
                        "sSortDescending": ": activer pour trier la colonne par ordre d&eacute;croissant"
                    }
                }});
				
           
			
			
 
		
        })
    </script>
{%endblock%}