{% extends "::base.html.twig" %}
{% block title %}{%trans%}editer_regle{%endtrans%}{% endblock %}
{%block active%}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':2})) }}

{%endblock%}
{% block body%}
    <div class="col-lg-12">
        {% for message in app.session.flashbag.get('info') %}            
            <div class="col-lg-12 text-center m-t-md alert alert-success fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>{{ message }}</strong>
            </div>
        {% endfor %} 
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header col-sm-12">
                           {%trans%}editer_regle{%endtrans%}    
                        </h1>	
                       
                        <ol class="breadcrumb col-sm-12">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{path('administration')}}">{%trans%}dashboard{%endtrans%}</a>                            </li>
                            <li>
                                <a href="{{ path('regles_index') }}">{%trans%}regles{%endtrans%}</a>
                            </li>
                            <li>
                                {%trans%}editer_regle{%endtrans%}
                            </li>	
                        </ol>
                    </div>
                </div>
            </div>
            <div class="panel-body">
					<h3>{{ formeTraduit.libelle }}</h3>
					<br/>
                     {{ form_start(edit_form,{'attr':{'name':'simpleForm','id':'simpleForm'}}) }}
                            <div class="col-sm-2">
								{{ form_label(edit_form.commissaireRequis,'commissaire'|trans) }}		
                            </div>
                            <div class="col-sm-2">   
													
                                {{ form_errors(edit_form.commissaireRequis,{'attr':{'class':'alert alert-danger'}}) }} 
                                {{ form_widget(edit_form.commissaireRequis, {'attr': {'class': ''}}) }}                               
                            </div>
							
							   <div class="form-group hidden">
								{{ form_label(edit_form.formeJuridique,'forme_juridique' |trans ~ ' (*)') }} 
								{{ form_errors(edit_form.formeJuridique,{'attr':{'class':'alert alert-danger'}}) }}                                            
								{{ form_widget(edit_form.formeJuridique, {'attr': {'class': 'form-control'}}) }}
								</div>
                             
                            <div class="form-group col-sm-12">
						
                           
                            <br />
                                <br />
                                <br />
                                <input style = "width:100px;" class = "btn btn-success form-control col-sm-3" type = "submit" value = "{{'enregistrer'|trans}}"/>
                                <a href = "{{ path('regles_index') }}" style = "width:100px;" class = "btn btn-default form-control col-md-offset-7 col-sm-1">{{'annuler'|trans}}</a>                 
                                
                                
                            </div>
							
                             {{ form_end(edit_form) }}
           
                    </div>

        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
 
    </script>
{% endblock %}