{% extends "::base.html.twig" %}
{% block title %}{%trans%}administration_messagerie_titre{%endtrans%}{% endblock %}

{%block active%}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':2})) }}
{% endblock %}

{% block body%}
    <div class="col-lg-12">
        {% for message in app.session.flashbag.get('info') %}            
            <div class="col-lg-12 text-center m-t-md alert alert-success fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>{{ message }}</strong>
            </div>
        {% endfor %} 
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            {%trans%}administration_messagerie_titre{%endtrans%}
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{path('administration')}}">{%trans%}dashboard{%endtrans%}</a>
                            </li>
                            <li>
                                &nbsp;&nbsp;{%trans%}administration_messagerie_titre{%endtrans%}
                            </li>	
                        </ol>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <form class = "well col-sm-12" method="POST">
                    <div class = "form-group col-sm-12">
                        <label>{%trans%}test_messagerie.email{%endtrans%}</label>
                        <input type = "email" class="form-control" name = "email" required = "required" />
                    </div>
                    <div class = "form-group col-sm-12">
                        <label>{%trans%}test_messagerie.message{%endtrans%}</label>
                        <textarea type = "email" class="form-control" name = "message" required = "required" ></textarea>
                    </div>
                    <div class = "form-group col-sm-12">
                        <span class="text-info pull-left">(*) : {%trans%}obligatoire{%endtrans%}</span>
                        <br/>
                        <br />
                        <br />
                        <br />
                        <input type = "submit" class="btn btn-success" name = "adresseMessage" required = "required" value="{{'envoyer'|trans}}"/>
                    </div>	
                </form>
            </div>
        </div>
                    <br />
        <br />
        <a href="{{ path('messagerie_edit') }}">
            <i class="fa fa-arrow-left"></i>&nbsp;&nbsp; {%trans%}retour{%endtrans%}
        </a>
    </div>          
{% endblock %}
