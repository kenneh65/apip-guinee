{% extends "::base.html.twig" %}
{% block title %}{%trans%}modification_langue_titre{%endtrans%}{% endblock %}

{%block active%}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':2})) }}

{%endblock%}
{% block body%}

   <div class="col-lg-12">
            {% for message in app.session.flashbag.get('info') %}            
                <div class="col-lg-12 text-center m-t-md alert alert-success fade in">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>{{ message }}</strong>
                </div>
            {% endfor %} 
                <div class="hpanel">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="page-header">
                                    {%trans%}modification_langue_titre{%endtrans%}
                                </h1>
                                <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{path('administration')}}">{%trans%}dashboard{%endtrans%}</a>
                            </li>
                            <li>
                                <a href="{{ path('langue_index') }}">{{'langue'|trans}}s</a>
                            </li>
                            <li><i></i>{%trans%}modification{%endtrans%}</li>
                        </ol>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                     {{ form_start(edit_form,{'attr':{'name':'simpleForm','id':'simpleForm','novalidate':'novalidate'}}) }}
                            <div class="form-group col-sm-12">
                                {{ form_label(edit_form.code,'code (*)') }} 
                                {{ form_errors(edit_form.code,{'attr':{'class':'alert alert-danger'}}) }}                                            
                                {{ form_widget(edit_form.code, {'attr': {'class': 'form-control'}}) }}
                            </div>
                             <div class="form-group col-sm-12">
                                {{ form_label(edit_form.libelle,'langue.libelle'|trans) }} 
                                {{ form_errors(edit_form.libelle,{'attr':{'class':'alert alert-danger'}}) }}                                            
                                {{ form_widget(edit_form.libelle, {'attr': {'class': 'form-control'}}) }}
                            </div>
                             <div class="form-group col-sm-12">
                                <label>{%trans%}est_langue_par_defaut{%endtrans%}</label>&nbsp;<input type="checkbox" name="courante" {%if langue.courante==true%}checked="checked"{%endif%}value="1"/>
                            </div>
                            <div class="form-group col-sm-12">
                            <p class="text-info pull-left">(*) : {{'obligatoire'|trans}}</p><br/>
                            <br />
                                <br />
                                <br />
                                <input style = "width:100px;" class = "btn btn-success form-control col-sm-3" type = "submit" value = "{{'modifier'|trans}}"/>
                                <a href = "{{ path('langue_index') }}" style = "width:100px;" class = "btn btn-default form-control col-md-offset-7 col-sm-1">{{'annuler'|trans}}</a>                 
                                
                                
                            </div>
                             {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>

                       
{% endblock %}
