{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}{%trans%}reinitialisation_mot_passe{%endtrans%}| {{parent()}}{% endblock %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
<div class="content animate-panel">				
	 {% for key, messages in app.session.flashbag.all() %}
		{% for message in messages %}
			<div class="alert alert-{{ key }}">
			  {{ message|trans({}, 'FOSUserBundle') }}
			</div>
		{% endfor %}
	{% endfor %}
	<div class="row">
		<div id = "fileAriente" class="hidden">
			<a href="#">Admin</a> <span>></span> {{ app.user.email }} >{%trans%}utilisateur_change_password{%endtrans%}
		</div>
		<br />
		<div class="hpanel">
			
			<div class="panel-body">
			  <div class="panel-body">
				<div class="col-lg-12">
					{% include "FOSUserBundle:ChangePassword:changePassword_content.html.twig" %}
				</div>
			  </div>
			</div>					  
		</div>
	</div>
</div>
{% endblock %}
{% block javascripts%}
	<script src="{{asset('js/vendors/jquery/dist/jquery.min.js') }}"></script>
	<script src="{{asset('js/vendors/jquery-ui/jquery-ui.min.js') }}"></script>
	<script src="{{asset('js/vendors/slimScroll/jquery.slimscroll.min.js') }}"></script>
	<script type="text/javascript" src="{{asset('js/bootstrap.js')}}"></script>
	<script src="{{asset('js/vendors/metisMenu/dist/metisMenu.min.js') }}"></script>
	<script src="{{asset('js/vendors/iCheck/icheck.min.js') }}"></script>
	<script src="{{asset('js/vendors/sparkline/index.js') }}"></script>
	<script src="{{asset('js/vendors/sweetalert/lib/sweet-alert.min.js') }}"></script>
	<script src="{{asset('js/vendors/toastr/build/toastr.min.js') }}"></script>
	<script src="{{asset('js/vendors/fooTable/dist/footable.all.min.js') }}"></script>
	<script type="text/javascript" src="{{asset('js/homer.js')}}"></script>
	<script>
	
		
	
	$('form[name="fos_user_change_password_form"]').attr('action',"{{ path('utilisateur_profil-updatepassword') }}").find('div').each(function(){
		$(this).attr('class','form-group');
			$(this).find('label').each(function(){
				$(this).attr('class','form-label');
			});
			
				$(this).find('input').each(function(){
					if ($(this).attr('type') == 'submit')
						$(this).attr('class','wpcf7-form-control wpcf7-submit btn-block');
					else
						$(this).attr('class','form-control');
			});
			});
	</script>
{% endblock %}