{% extends 'base.html.twig' %}
{% block title %}{%trans%}details_utilisateur_titre{%endtrans%} - {{parent()}}{% endblock %}
{%block active%}
    {{ render(controller("DefaultBundle:Default:menuAdmin",{'active':5})) }}
{%endblock%}

{% block body %}

    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="row">
                     <div class="col-lg-12">
                        <h1 class="page-header">
                            {%trans%}message_details_utilisateur{%endtrans%}
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="{{path('administration')}}">{%trans%}dashboard{%endtrans%}</a>
                            </li>
                            <li>
                                <a href="{{path('utilisateurs_index')}}">{%trans%}utilisateurs{%endtrans%}</a>
                            </li>
                            <li>{{'details'|trans}}</li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="panel-body">

                    <div class="row">                        
                        <div class="form-group col-sm-4">
                            <label>{%trans%}nom{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.nom }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}prenom{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.prenom }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}utilisateur.username{%endtrans%}</label>
                            <br/>
                             {{ utilisateur.username }}
                        </div> 						
                    </div>
					
					<div class="row">
                        <div class="form-group col-sm-4">
                            <label>{%trans%}message_date_naissance{%endtrans%}</label>
                            <br/>
                             {% if utilisateur.dateNaissance %}{{ utilisateur.dateNaissance|date('Y-m-d') }}{% endif %} 
                        </div>
                        <div class="form-group col-sm-4">
                            <label>{%trans%}message_lieu_naissance{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.lieuNaissance }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}message_genre{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.genre }}
                        </div>
                    </div>
					
					<div class="row">
                        <div class="form-group col-sm-4">
                            <label>{%trans%}adresse{%endtrans%}</label>
                            <br/>
                             {{ utilisateur.adresse }} 
                        </div>						
                        <div class="form-group col-sm-4">
                            <label>{%trans%}utilisateur.telephone{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.telephone }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}email{%endtrans%}</label>
                            <br/>
                            {{ utilisateur.email }}
                        </div>
                    </div>
					
					<div class="row">
                        <div class="form-group col-sm-4">
                            <label>{%trans%}utilisateur.paysResidence{%endtrans%}</label>
                            <br/>
                            {{ definedPaysTraduction }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}region{%endtrans%}</label>
                            <br/>
                           {{ utilisateur.regionResidence }}
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}prefecture{%endtrans%}</label>
                            <br/>
                             {% if utilisateur.prefecture%}{{ utilisateur.prefecture.libelle }}{% endif %}
                        </div>
                    </div>

					<div class="row">
						<div class="form-group col-sm-4">
                            <label>{%trans%}sousPrefecture{%endtrans%}</label>
                            <br/>
                             {% if utilisateur.sousPrefecture %}{{ utilisateur.sousPrefecture.libelle }}{% endif %}
                        </div>
                        <div class="form-group col-sm-4">
                            <label>{%trans%}utilisateur.type_identification{%endtrans%}</label>
                            <br/>
                             {{ utilisateur.typeIdentification }} 
                        </div>
						<div class="form-group col-sm-4">
                            <label>{%trans%}message_num_cni{%endtrans%}</label>
                            <br/>
                             {{ utilisateur.cni }} 
                        </div>
                    </div>
					
					<div class="row">
                        {%if utilisateur.pole%}
						<div class="form-group col-sm-4">
                            <label>Pole</label>
                            <br/>
                           {{ utilisateur.pole }}
                        </div>
						{% endif %}
						
						<div class="form-group col-sm-4">
                            <label>{%trans%}utilisateur.etat{%endtrans%}</label>
                            <br/>
                            {%if utilisateur.enabled%}
                                {{'Actif'|trans}}
                            {%else%}
                                {{'Inactif'|trans}}
                            {%endif%}
                        </div>
                    </div>
                </div>			
            </div>
			<a href="{{ path('utilisateurs_index') }}" style = "width:100px;" class = "btn btn-default form-control col-sm-1">{%trans%}retour{%endtrans%}</a>
        </div>
    </div>
</div>


{% endblock %}   
